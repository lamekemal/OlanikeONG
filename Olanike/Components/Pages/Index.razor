    private async Task Submit()
    {
        if (editContext != null && editContext.Validate())
        {
            newsletter.Tokens = Guid.NewGuid().ToString();
            dbContext.Newsletters.Add(newsletter);
            await dbContext.SaveChangesAsync();
            Logger.LogInformation("Submit called: Form is valid");
            Logger.LogInformation("Message = {Message} Name = {Name} " +
            "Mail = {Mail} " + "ProductionDate = {ProductionDate}",
            newsletter?.Message, newsletter?.Name, newsletter?.Mail,
            newsletter?.ProductionDate);

        }
        else
        {
            Logger.LogInformation("Submit called: Form is INVALID");
        }


    }

